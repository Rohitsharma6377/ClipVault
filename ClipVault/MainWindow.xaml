<Window
    x:Class="ClipVault.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClipVault"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom TitleBar -->
        <Grid x:Name="AppTitleBar" Height="32">
            <TextBlock Text="ClipVault" VerticalAlignment="Center" Margin="16,0,0,0" FontWeight="SemiBold"/>
        </Grid>

        <NavigationView x:Name="NavView" 
                        Grid.Row="1"
                        PaneDisplayMode="LeftCompact"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="True"
                        Loaded="NavView_Loaded"
                        SelectionChanged="NavView_SelectionChanged">
            
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Clipboard" Tag="ClipboardListPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Paste"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Pinned" Tag="PinnedPage">
                     <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Pin"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox QueryIcon="Find" PlaceholderText="Search clipboard..." QuerySubmitted="AutoSuggestBox_QuerySubmitted"/>
            </NavigationView.AutoSuggestBox>

            <Frame x:Name="ContentFrame" />
            
        </NavigationView>
    </Grid>
</Window>
