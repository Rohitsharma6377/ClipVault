<Page
    x:Class="ClipVault.Views.PremiumPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="PageRoot"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="24" MaxWidth="400">
            <SymbolIcon Symbol="Diamond" Width="64" Height="64" />
            <TextBlock Text="Unlock Premium Features" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center"/>
            <StackPanel Spacing="8">
                <TextBlock Text="• Unlimited Clipboard History" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <TextBlock Text="• Cloud Sync (Coming Soon)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <TextBlock Text="• Advanced Categories" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            </StackPanel>

            <Button Content="Upgrade to Premium" 
                    Command="{x:Bind ViewModel.PurchasePremiumCommand}" 
                    IsEnabled="{x:Bind ViewModel.IsPremium, Converter={StaticResource BooleanToInvertConverter}, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch"/>

            <TextBlock Text="Already Premium!" 
                       Visibility="{x:Bind ViewModel.IsPremium, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                       HorizontalAlignment="Center" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
        </StackPanel>
    </Grid>
</Page>
