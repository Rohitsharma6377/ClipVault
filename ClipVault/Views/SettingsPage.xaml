<Page
    x:Class="ClipVault.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <StackPanel Spacing="10" Padding="16">
            <TextBlock Text="Settings" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="ClipVault Version 1.0" Style="{StaticResource BodyTextBlockStyle}" Opacity="0.7"/>
            
            <ToggleSwitch Header="Start with Windows" IsOn="True" IsEnabled="True" Margin="0,10,0,0" />
            
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="0,10,0,0">
                <TextBlock Text="More settings coming soon..." FontSize="12" Opacity="0.6" HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
